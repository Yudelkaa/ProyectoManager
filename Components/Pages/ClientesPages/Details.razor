@page "/Details"
@inject ClientesService clientesService;
@rendermode InteractiveServer

<PageTitle>Registro de Tickets</PageTitle>
<EditForm Model="@clientesService">
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header alert-secondary" style="color: white; background-color: royalblue;">
                <NavLink class="btn btn-light float-end" href="/R_Clientes">Registrar Clientes</NavLink>
                <h1><strong>Consultas</strong></h1>
                <h3>Clientes</h3>
            </div>
            <table class="table table table-striped table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>  
                        <th>Nombre</th>
                        <th>Celular</th>
                        <th>Tel&eacute;fono</th>
                        <th>RNC</th>
                        <th>Email</th>
                        <th>Direcci&oacute;n</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in clientesService.GetClientes())
                    {
                        <tr>
                            <td>@cliente.ClientesId</td>
                            <td>@cliente.Nombres</td>
                            <td>@cliente.Celular</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.RNC</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Direccion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</EditForm>

